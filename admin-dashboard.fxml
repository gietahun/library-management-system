<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AdminDashboardController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Admin Panel" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Button text="Manage Books" onAction="#handleManageBooks" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" maxWidth="Infinity"/>
            <Button text="Users" onAction="#handleUsers" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" maxWidth="Infinity"/>
            <Button text="Messages" onAction="#handleMessages" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" maxWidth="Infinity"/>
            <Button text="Transactions" onAction="#handleTransactions" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" maxWidth="Infinity"/>
            <VBox VBox.vgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #c0392b; -fx-text-fill: white;" maxWidth="Infinity"/>
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label fx:id="welcomeLabel" text="Welcome Admin" style="-fx-font-size: 24px;"/>
            <Label text="Select an option from the sidebar to begin."/>
        </VBox>
    </center>
</BorderPane>
