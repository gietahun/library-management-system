<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MyBooksController">
    <top>
        <HBox spacing="20" style="-fx-background-color: #9b59b6; -fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Button text="â† Back" onAction="#handleBack" style="-fx-background-color: white; -fx-text-fill: #9b59b6;"/>
            <Label text="My Borrowed Books" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="bookTitleColumn" text="Book Title" prefWidth="250" />
                    <TableColumn fx:id="borrowDateColumn" text="Borrow Date" prefWidth="120" />
                    <TableColumn fx:id="returnDateColumn" text="Return Date" prefWidth="120" />
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="returnBtn" text="Return Selected Book" onAction="#handleReturn" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
